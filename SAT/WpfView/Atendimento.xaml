<Window x:Class="WpfView.Atendimento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"
        Title="Atendimento" Height="800" Width="1000">
    <TabControl x:Name="Atendimento1" HorizontalAlignment="Left" Height="769" VerticalAlignment="Top" Width="1000" Margin="0,0,-8,0">
        <TabItem Header="Atendimento">
            <Grid Background="#FFF5CA9F" Margin="0,-2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLimpar" Content="Limpar" HorizontalAlignment="Left" Margin="564,42,0,0" VerticalAlignment="Top" Width="75" Background="#FFEA7373" Click="btnLimpar_Click" Height="20"/>
                <Label Content="Nome" HorizontalAlignment="Left" Margin="89,62,0,0" VerticalAlignment="Top" Height="26" Width="43"/>
                <TextBox x:Name="txtNome" HorizontalAlignment="Left" Height="23" Margin="161,62,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <Label Content="CPF" HorizontalAlignment="Left" Margin="89,93,0,0" VerticalAlignment="Top" Height="26" Width="30"/>
                <TextBox x:Name="txtCpf" HorizontalAlignment="Left" Height="23" Margin="161,93,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="txtProtocolo" HorizontalAlignment="Left" Height="23" Margin="387,62,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="387,93,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <Label Content="Label" HorizontalAlignment="Left" Margin="322,93,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
                <Label Content="Protocolo" HorizontalAlignment="Left" Margin="322,62,0,0" VerticalAlignment="Top" Height="26" Width="62"/>
                <RadioButton x:Name="rdoRadio" Content="Radio" HorizontalAlignment="Left" Margin="89,207,0,0" VerticalAlignment="Top" Checked="rdoRadio_Checked" Height="15" Width="49" GroupName="Planos"/>
                <RadioButton x:Name="rdoFibra" Content="Fibra" HorizontalAlignment="Left" Margin="232,207,0,0" VerticalAlignment="Top" Height="15" Width="45" GroupName="Planos" Checked="rdoFibra_Checked"/>
                <RadioButton x:Name="rdoCabeada" Content="Rede Cabeada" HorizontalAlignment="Left" Margin="374,207,0,0" VerticalAlignment="Top" Height="15" Width="95" GroupName="Planos" Checked="rdoCabeada_Checked"/>
                <RadioButton x:Name="rdoRegiao" Content="Problema na Região" HorizontalAlignment="Left" Margin="564,107,0,0" VerticalAlignment="Top" Checked="rdoRegiao_Checked" Height="15" Width="125"/>
                <Label Content="Cod.Cliente" HorizontalAlignment="Left" Margin="89,124,0,0" VerticalAlignment="Top" Height="26" Width="71"/>
                <TextBox x:Name="txtCodCliente" HorizontalAlignment="Left" Height="23" Margin="161,127,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                <CheckBox x:Name="cbCabos" Content="Cabos Verificados" HorizontalAlignment="Left" Margin="101,265,0,0" VerticalAlignment="Top" Height="15" Width="108"/>
                <CheckBox x:Name="cbReiniciadoPoe" Content="POE Reini." HorizontalAlignment="Left" Margin="217,265,0,0" VerticalAlignment="Top" Height="15" Width="99" Visibility="Hidden"/>
                <CheckBox x:Name="cbIsoladoCabo" Content="Cabo Isolado" HorizontalAlignment="Left" Margin="340,265,0,0" VerticalAlignment="Top" Height="15" Width="89" Visibility="Hidden"/>
                <CheckBox x:Name="cbDiscador" Content="Criado Discador" HorizontalAlignment="Left" Margin="466,265,0,0" VerticalAlignment="Top" Height="15" Width="104" Visibility="Hidden"/>
                <CheckBox x:Name="cbRoteador" Content="Roteador Reini." HorizontalAlignment="Left" Margin="217,265,0,0" VerticalAlignment="Top" Height="15" Width="108" Visibility="Hidden"/>
                <TextBox x:Name="txtGrid" HorizontalAlignment="Left" Height="515" Margin="732,62,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="252"/>
                <Button x:Name="btnConfirmar" Content="Confirmar" HorizontalAlignment="Left" Margin="10,715,0,0" VerticalAlignment="Top" Width="75" Background="#FF92DA69"/>
                <RadioButton Content="Problema Resolvido" HorizontalAlignment="Left" Margin="89,327,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="Confere"/>
                <RadioButton Content="Não Solucionado" HorizontalAlignment="Left" Margin="232,327,0,0" VerticalAlignment="Top" FontWeight="Bold" GroupName="Confere"/>
                <CheckBox x:Name="cbONU" Content="ONU Reini." HorizontalAlignment="Left" Margin="217,265,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
                <CheckBox x:Name="cbRompimento" Content="Possivel Romp." HorizontalAlignment="Left" Margin="340,265,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
            </Grid>
        </TabItem>
        <TabItem Header="Histórico">
            <Grid Background="#FFF5CA9F"/>
        </TabItem>
    </TabControl>
</Window>
